<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- If using PlatformScheduler -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- Needed by JobScheduler -->

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" /> <!-- 新增权限 -->


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DrillDemo">
        <activity
            android:name=".DemoActivity"
            android:exported="true"
            android:theme="@style/Theme.DrillDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".play.SongMainActivity22"
            android:launchMode="singleTop" />
        <activity android:name=".MainActivity" />
        <activity android:name="com.superman.exoplayerdemo.FirstActivity" />
        <activity android:name=".activity.TestProgressBarActivity" />
        <activity
            android:name=".play.SongMainActivity"
            android:launchMode="singleTop" />
        <activity android:name=".play.download.DownloadWithViewModelActivity" />
        <activity android:name=".play.download.list1.SongListActivity" />
        <activity android:name="com.superman.coordinatorLayout.CoordinatorLayoutActivity"/>
        <service
            android:name="com.superman.exoplayerdemo.PlaybackService"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaSessionService" />
            </intent-filter>
        </service>
        <service
            android:name=".play.PlaySongService"
            android:exported="true"

            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaSessionService" />
            </intent-filter>
        </service>
        <!-- 或其他合适的类型 -->
        <!-- You might want to add an intent filter if you need to start it from other apps,
             but for typical in-app downloads, exported="false" is fine. -->
        <service
            android:name=".play.download.MyDownloadService"
            android:exported="false"
            android:foregroundServiceType="dataSync"></service>

        <service
            android:name=".play.download.list1.MyDownloadService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
        <service
            android:name=".play.download.list1.PlaybackService"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaSessionService" />
            </intent-filter>
        </service>


    </application>

</manifest>